import random
#n=int(input("number of beads "))
k=0
a=[10,100,1000,10000,100000]
for b in a:
    k=0
    for i in range(b):
        x=random.random()
        y=random.random()
        #print(x,y)
        s=x*x+y*y
        if (s<1):
            k+=1
    print("number of beads",b)
    print("beads within a circle",k)
    print("PI is",4*k/b)
    print()
